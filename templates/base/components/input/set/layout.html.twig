{# fake input to avoid blank space when loading page #}
<input type="text" class="ibo-input ibo-input-selectize ibo-input-set attribute-set selectize-input" id="{{ oUIBlock.GetId() }}_fake_input">

{# Set ui block #}
<select
    id="{{ oUIBlock.GetId() }}"
    name="{{ oUIBlock.GetName() }}[]"
    multiple
    style="display: none;"
>
</select>

{# Options template #}
{% if oUIBlock.HasOptionsTemplate() %}
    <template id="{{ oUIBlock.GetId() }}_options_template">
        {% include oUIBlock.GetOptionsTemplate() %}
    </template>
{% endif %}

{# Items template #}
{% if oUIBlock.HasItemsTemplate() %}
    <template id="{{ oUIBlock.GetId() }}_items_template">
        {% include oUIBlock.GetItemsTemplate() %}
    </template>
{% endif %}

